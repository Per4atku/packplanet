generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model categories {
  id       String     @id
  name     String     @unique
  products products[]
}

model partners {
  id          String @id
  name        String
  description String @default("")
  image       String @default("")
}

model price_lists {
  id         String   @id
  filename   String
  path       String
  uploadedAt DateTime @default(now())
}

model products {
  id               String     @id
  sku              String     @unique
  name             String
  price            Float
  unit             String
  categoryId       String
  description      String     @default("")
  images           String[]   @default([])
  wholesalePrice   Float?
  wholesaleAmount  Int?
  heatProduct      Boolean    @default(false)
  linkedProductIds String[]   @default([])
  createdAt        DateTime   @default(now())
  updatedAt        DateTime
  categories       categories @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId, heatProduct])
  @@index([categoryId])
  @@index([createdAt(sort: Desc)])
  @@index([heatProduct])
  @@index([name])
  @@index([sku])
}

model sessions {
  id        String   @id
  userId    String
  expiresAt DateTime
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model users {
  id             String     @id
  username       String     @unique
  hashedPassword String
  createdAt      DateTime   @default(now())
  sessions       sessions[]
}
